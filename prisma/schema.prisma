generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum CompanyStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  CONTRACT_ENDED
}

model Company {
  id              String  @id @default(uuid())
  name            String 
  tradeName       String  @unique
  cnpj            String  @unique
  status          CompanyStatus @default(ACTIVE)
  segmentation    String?
  obs             String?
  address         String?
  dateOfPayment   DateTime?
  created_at      DateTime  @default(now())
  updated_at      DateTime  @updatedAt
}
